@model DocGenerator.Client.ClientModel
@{
    ViewData["Title"] = "Doc Generator";
}


<div class="box">
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Doc Generator</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form action="" method="post">
                                    <textarea name="textarea" id="txtDoc"></textarea>
                                    <button id="btnSubmit" type="button" class="btn btn-success">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>