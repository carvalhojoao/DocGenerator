@{
    ViewData["Title"] = "Doc Generator";
}


<div class="box">
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-default">
                    <div class="card-header">
                        <h3 class="card-title">Doc Generator</h3>
                    </div>
                    <div class="card-body">
                        <form action="" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <textarea name="textarea" id="txtDoc"></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="offset-lg-10 col-lg-1">
                                    <button id="btnPrint" type="button" class="btn btn-success btn-lg">Print</button>
                                </div>
                            </div>
                        </form>

                        <div id="printDoc">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>